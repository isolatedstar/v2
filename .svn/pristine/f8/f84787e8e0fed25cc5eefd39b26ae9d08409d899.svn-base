.st_tree{padding:10px; border:1px #ddd solid; float:left;}
/* 超链接 */
.st_tree a{text-decoration:none;}
/* 鼠标经过的超链接 */
.st_tree a:hover{color:#f33;text-decoration:underline;}
/* 菜单 */
.st_tree ul{padding:0 18px;margin:0;}
/* 菜单项 */
.st_tree ul li{font-size:13px;color:#222;line-height:22px;cursor:pointer;list-style:none;}
/* 子菜单 */
.st_tree ul li ul{}
/* 子菜单项 */
.st_tree ul li ul li{}
/* 子菜单的父节点 */
.st_tree .folder{list-style-image:url(${ctx}/mall/images/st_icon.png);background-repeat:no-repeat;padding:0 0 0 6px;}
/* 展开的父节点 */
.st_tree .open{list-style-image:url(${ctx}/mall/images/st_icon_open.png);background-repeat:no-repeat;padding:0 0 0 6px;}