@charset "utf-8";
/* CSS Document */
*{padding:0;margin:0;} a{ text-decoration:none;} li{ list-style:none;} img{border:0;} input,select,textarea{ outline:none;}
body{ font-family:"微软雅黑", "宋体", Arial; font-size:14px; color:#333;  overflow-x:hidden;}
img{ font-size:40px;color:#ccc;}
.clear{ clear:both;}
/*head top*/
#head_top{width:1280px;height:36px; border-bottom:1px solid #e7e7e7; margin:0 auto;}
.head_top_in{width:1202px; margin:0 auto; font-family: "宋体","微软雅黑", Arial}
.head_top_in p{ float:right; padding-right:62px; font-size:12px; color:#6c6c6c; line-height:36px;}
.head_top_in p span{ color:#e49d04;}
/*head bot*/
#head_bot{width:1280px; height:142px; margin:0 auto;}
.logo{padding:9px 0 0 19px; float:left; width:224px;}
.head_hy{width:354px; float:left;}
.head_hy_in{width:350px; height:63px; border-left:1px solid #e6a71c; margin:41px 0 0 23px;}
.head_hy_in h2{ width:350px;  font-size:20px; color:#3a3a39; font-weight:normal; text-align:center; padding-left:4px;}
.head_hy_in p{ float:left;}
.head_hy_in .hjhy{ color:#fff; width:88px; height:22px; background-color:#e7a61c; border-radius:6px; text-align:center; line-height:20px; font-weight:bold; margin:12px 27px 0 44px; }
.head_hy_in .scdp{padding-top:14px;}
.head_hy_in .scdp a{color:#3a3a39; }
.head_hy_in .scdp i{ color:#e7a61c; padding-right:5px;}
.head_adress{width:450px; float:left;}
.head_adress p{ color:#3a3a39; padding-left:84px;}
.head_adress .head_adr_p1{padding-top:50px;}
.head_adress .head_adr_p2{padding-top:14px;}
.head_right{ float:left;}
.head_right p{width:107px; height:43px;background-color:#e8a61c; font-size:18px;  line-height:43px; text-align:center;}
.head_right p a{color:#fff; }
.head_right .wycg{margin:14px 0 10px 0;}
/*nav*/
#nav{width:1280px; height:49px; background:#e49d05; margin:0 auto;}
.nav_in{width:1280px; margin:0 auto;}
.nav_in ul{height:49px;}
.nav_in ul li{height:49px; float:left;}
.nav_in ul li a{ display:block; font-size:20px; color:#fff; line-height:49px; text-align:center; padding:0 52px 0 28px; font-family:"黑体", "微软雅黑"; font-weight:800;}
.nav_in ul li a i{ font-size:18px; padding-right:10px; color:#fff;}
.nav_in ul li a:hover{ background:#f1bb51;}
.nav_in ul li .nav_active{background:#f1bb51;}
/********************************footer start************************************/
#footer{width:1280px; height:365px; background:#e49d05; font-size:14px; color:#fff;margin:0 auto;}
.footer_in{ width:1280px; margin:0 auto;}
.footer_in_bot{padding-top:55px;}
.footer_in_bot>p{ line-height:32px; text-align:center;}
.footer_in_bot>p a{color:#fff;}
#footer a:hover{ color:#067af4;}
.footer_in_bot>p:hover{ color:#067af4;}
.footer_in_ul{padding-left:232px;}
.footer_in_ul span{ padding:0 4px;}
.footer_in_ul li{ float:left;line-height:30px; }
.footer_in_ul li a{ color:#fff;}
.footer_in_ul li:hover{color:#067af4;}
/********************************footer  over************************************/



