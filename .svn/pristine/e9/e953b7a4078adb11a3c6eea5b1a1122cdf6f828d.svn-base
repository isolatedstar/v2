*{margin:0 auto; outline:none}
body{margin:0; padding:0; font-size:14px; font-family:microsoft yahei,Arial,verdana,tahoma;}
ul,li,dl,dt,dd,ol{margin:0; padding:0; list-style:none}
img{border:0}
a{color:#222; text-decoration:none; transition:all 0.2s ease}
a:hover{color:#166eaa; text-decoration:none; transition:all 0.2s ease}
.clr:after{clear:both; display:block; content:" "; height:0}
.clr{zoom:1}
.fl{float:left}
.fr{float:right}
.f-align-c{text-align:center}
.f-align-r{text-align:right}
.v *{display:inline-block; vertical-align:middle}

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
main,
menu,
nav,
section,
summary{display:block}

audio,
canvas,
progress,
video{display:inline-block; vertical-align:baseline}

/* 以上公共样式 */